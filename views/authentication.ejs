<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title></title>

    <!-- Bootstrap Link-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="./style.css" />
    <style>
      body {
        background-image: url("https://images.unsplash.com/photo-1696777406868-5258913ef41d?q=80&w=1471&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
      }

      .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }

      .card {
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
        background-color: rgba(255, 255, 255, 0.4);
        border: none;
        border-radius: 20px;
        width: 300px;
        max-width: 1500px;
        margin: auto;
        backdrop-filter: blur(10px);
      }
      .card-body {
        padding: 30px;
        font-weight: 400;
      }

      .registerButton {
        margin-top: 22px !important;
        color: whitesmoke;
        border: 1px solid rgb(4, 32, 190);
        background-color: rgb(4, 32, 190);
        margin-left: -25px !important;
      }

      .loginButton {
        margin-left: -20px !important;
        color: whitesmoke;
        border: 1px solid rgb(4, 32, 190);
        background-color: rgb(4, 32, 190);
      }

      .registerButton:hover,
      .loginButton:hover {
        border: 1px solid #52c234;
        background-image: linear-gradient(
          to right,
          #52c234,
          #78d65f
        ); /* Changing background color to linear gradient on hover */
      }
      .form-group {
        margin-bottom: 15px;
      }
      /* Hide second form initially */
      #registerForm {
        display: none;
      }

      .card input:hover {
        background-color: rgba(189, 209, 6, 0.1);
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="card">
        <div class="card-body">
          <!-- Login Form -->
          <form
            action="/api/users/login"
            method="POST"
            name="loginForm"
            id="loginForm"
          >
            <h3 style="text-align: center">Login</h3>
            <div class="form-group">
              <label for="email">Email</label>
              <input
                type="email"
                name="email"
                class="form-control"
                id="email"
                placeholder="Enter email"
                value=""
              />
            </div>

            <div class="form-group">
              <label for="password">Password</label>
              <input
                type="password"
                name="password"
                class="form-control"
                id="password"
                placeholder="Enter Password"
                value=""
              />
              <br />
            </div>
            <div class="d-grid gap-2 col-2 mx-auto">
              <button type="submit" class="btn btn-primary loginButton">
                Login
              </button>
            </div>
          </form>

          <!-- Register Form -->
          <form
            action="/api/users/register"
            method="POST"
            name="registerForm"
            id="registerForm"
          >
            <h3 style="text-align: center">Signup</h3>
            <div class="form-group">
              <label for="username">Username</label>
              <input
                type="text"
                name="username"
                class="form-control"
                id="username"
                placeholder="Enter Username"
                value=""
              />
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input
                type="email"
                name="email"
                class="form-control"
                id="email"
                placeholder="Enter email"
                value=""
              />
            </div>

            <div class="form-group">
              <label for="password">Password</label>
              <input
                type="password"
                name="password"
                class="form-control"
                id="password"
                placeholder="Enter Password"
                value=""
              />
            </div>

            <div class="form-group">
              <label for="userType">User Type</label>
              <select name="userType" id="userType" class="form-control">
                <option value="admin">Admin</option>
                <option value="user">User</option>
              </select>
            </div>

            <div class="d-grid gap-2 col-2 mx-auto">
              <button type="submit" class="btn btn-primary registerButton">
                Register
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script>
      function toggleForms() {
        var loginForm = document.getElementById("loginForm");
        var registerForm = document.getElementById("registerForm");

        if (window.location.pathname === "/api/users/register") {
          registerForm.style.display = "block";
          loginForm.style.display = "none";
        } else {
          registerForm.style.display = "none";
          loginForm.style.display = "block";
        }
      }

      toggleForms();
    </script>
  </body>
</html>
